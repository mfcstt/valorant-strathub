{
  "functions": {
    "api/**/*.php": {
      "runtime": "vercel-php@0.7.4"
    }
  },
  "routes": [
    { "src": "/assets/(.*)", "dest": "/api/public/assets/$1" },
    { "src": "/CSS/(.*)", "dest": "/api/public/CSS/$1" },
    { "src": "/JS/(.*)", "dest": "/api/public/JS/$1" },
    { "src": "/fonts/(.*)", "dest": "/api/public/fonts/$1" },
    { "src": "/(.*)", "dest": "/api/public/index.php?path=$1" }
  ]
}
